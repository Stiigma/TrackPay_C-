@using TrackPay.DataStructures
@model ColaConPrioridad<TrackPay.Models.Pago>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suscripciones</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
</head>
<body>
    <!-- Encabezado -->
    <header class="header">
        <div class="logo"><img src="/img/logoNombre.png" alt="Trackpay"></div>
        <nav class="nav">
            <a href="#">Pagos Activos</a>
            <a href="/historial">Historial</a>
        </nav>

        <div class="user-profile">
            <img src="/img/fotoperfil.jpg" alt="Usuario" class="profile-pic">
            <div class="profile">
                <span class="username">Usuario por defecto</span>
            </div>
            <i class="fas fa-cog" id="config-btn"></i>
        </div>

        <!-- Modal Configuración -->
        <div id="config-modal" class="modal">
            <div class="modal-inner">
                <div class="modal-header">
                    <h3>Configuración</h3>
                    <button class="modal-close" id="close-config-modal">&times;</button>
                </div>
                <div class="config-info">
                    <div class="config-left">
                        <label>Foto de Usuario:</label>
                        <div class="user-avatar">
                            <img src="/img/fotoperfil.jpg" alt="Foto de Usuario">
                        </div>
                        <div class="import-info">
                            <div class="info-row">
                                <label>Usuario:</label>
                                <div class="info-text">Usuario por defecto</div>
                            </div>
                            <div class="info-row">
                                <label>Nombre Completo:</label>
                                <div class="info-text">Nombre por defecto</div>
                            </div>
                        </div>
                    </div>
                    <div class="config-right">
                        <div class="info-row">
                            <label>Número de Celular:</label>
                            <div class="info-text">+00 000 000 0000</div>
                        </div>
                        <div class="info-row">
                            <label>Correo:</label>
                            <div class="info-text">correo@ejemplo.com</div>
                        </div>
                        <div class="info-row">
                            <label>Nacionalidad:</label>
                            <div class="info-text">Desconocido</div>
                        </div>
                        <div class="info-row">
                            <label>Total de Pagos Activos:</label>
                            <div class="info-text">0</div>
                        </div>
                    </div>
                </div>
                <div class="config-footer">
                    <button class="edit-btn">Editar Información</button>
                    <button class="logout-btn">
                        <a href="/login" class="logout-link">Cerrar Sesión</a>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Contenido Principal -->
    <main>
        <!-- Resumen -->
        <section class="overview">
            <h1>Suscripciones</h1>
            <img src="/img/logo.png" alt="Logo">
            <div class="overview-cards">
                <div class="card">
                    <h3>Valor por mes</h3>
                    <a class="value">$0.00</a>
                </div>
                <div class="card">
                    <h3>Fecha más próxima</h3>
                    <div class="value">No definida</div>
                </div>
                <div class="card">
                    <h3>Filtración</h3>
                    <select id="filter-select" class="filter-select">
                        <option value="todos">Todos</option>
                        <option value="pagos_unicos">Pago único</option>
                        <option value="pagos_recurrentes">Pago recurrente</option>
                    </select>
                </div>
            </div>
        </section>

        <!-- Tabla de Suscripciones -->
        <section class="subscriptions">
            <div class="new-subscription">
                <button class="new-btn" id="add-btn"><i class="fas fa-plus"></i> Nuevo</button>
            </div>

            <!-- Modal Agregar -->
            <div id="add-modal" class="modal hidden">
                <div class="modal-inner">
                    <div class="modal-header">
                        <h3>Nuevo Pago</h3>
                        <button class="modal-close" id="close-add-modal">&times;</button>
                    </div>

                    <!-- Formulario para Pago Único -->
                    <form id="payUnitForm" method="POST" class="form hidden">
                        
                        <div class="form-group">
                            <label for="concepto">Concepto:</label>
                            <input type="text"
                                   id="concepto"
                                   name="concepto"
                                   class="controls"
                                   placeholder="Concepto del pago"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="fecha">Fecha a pagar:</label>
                            <input type="date"
                                   id="fecha"
                                   name="fecha"
                                   class="controls"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="monto">Monto:</label>
                            <input type="text"
                                   id="monto"
                                   name="monto"
                                   class="controls"
                                   placeholder="monto"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="hora">Hora de aviso:</label>
                            <input type="time"
                                   id="hora"
                                   name="hora"
                                   class="controls"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="prioridad">Prioridad:</label>
                            <select id="prioridad"
                                    name="prioridad"
                                    class="controls"
                                    required>
                                <option value="1">Importante - Urgente</option>
                                <option value="2">Importante - No Urgente</option>
                                <option value="3">No Importante - Urgente</option>
                                <option value="4">No Importante - No Urgente</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="tipo">Tipo:</label>
                            <input type="text"
                                   id="tipo"
                                   name="tipo"
                                   class="controls"
                                   placeholder="Ejemplo: único"
                                   required>
                        </div>
                        <button type="button" id="switch-to-recurrent" class="btn-secondary">Cambiar a Pago Recurrente</button>
                        <button type="submit" class="btn-primary">Guardar Pago Único</button>
                    </form>

                    <!-- Formulario para Pago Recurrente -->
                    <form id="payReqForm" method="POST" class="form hidden">
                        
                        <div class="form-group">
                            <label for="concepto">Nombre del pago:</label>
                            <input type="text"
                                   id="concepto"
                                   name="concepto"
                                   class="controls"
                                   placeholder="Nombre del pago"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="frecuencia">Frecuencia:</label>
                            <select id="frecuencia"
                                    name="frecuencia"
                                    class="controls"
                                    required>
                                <option value="diario">Diario</option>
                                <option value="semanal">Semanal</option>
                                <option value="mensual">Mensual</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="monto">Monto</label>
                            <input type="text"
                                   id="monto"
                                   name="monto"
                                   class="controls"
                                   placeholder="monto"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="fecha_fin">Fecha a pagar:</label>
                            <input type="date"
                                   id="fecha_fin"
                                   name="fecha_fin"
                                   class="controls"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="hora">Hora de aviso:</label>
                            <input type="time"
                                   id="hora"
                                   name="hora"
                                   class="controls"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="prioridad">Prioridad:</label>
                            <select id="prioridad"
                                    name="prioridad"
                                    class="controls"
                                    required>
                                <option value="1">Importante - Urgente</option>
                                <option value="2">Importante - No Urgente</option>
                                <option value="3">No Importante - Urgente</option>
                                <option value="4">No Importante - No Urgente</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="tipo">Tipo:</label>
                            <input type="text"
                                   id="tipo"
                                   name="tipo"
                                   class="controls"
                                   placeholder="Ejemplo: recurrente"
                                   required>
                        </div>
                        <button type="button" id="switch-to-unit" class="btn-secondary">Cambiar a Pago Único</button>
                        <button type="submit" class="btn-primary">Guardar Pago Recurrente</button>
                    </form>
                </div>
            </div>

            <div class="custom-table">
                <!-- Encabezados de la tabla -->
                <div class="header">
                    <div>Nombre</div>
                    <div>Fecha de vencimiento</div>
                    <div>Temporalidad</div>
                    <div>Tipo</div>
                    <div>Cantidad</div>
                    <div>Acciones</div>
                </div>

                <!-- Filas dinámicas generadas con Razor -->
                <div id="lista-pagos">
                    @if (Model.EsVacia())
                    {
                        <div class="row">
                            <div colspan="6">No hay pagos activos.</div>
                        </div>
                    }
                    else
                    {
                        while (!Model.EsVacia())
                        {
                            var pago = Model.Dequeue();
                            <div class="pago-item" id="@pago.Id">
                                <div class="row">
                                    <div>@pago.Concepto</div>
                                    <div>@pago.FechaVencimiento</div>
                                    <div>@pago.Frecuencia</div>
                                    <div>@pago.Tipo</div>
                                    <div>@pago.Monto</div>
                                    <div class="actions">
                                        <button class="edit-btn" data-id="@pago.Id">Modificar</button>
                                        <button class="delete-btn" data-id="@pago.Id">Eliminar</button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </section>
    </main>

    
</body>
</html>
