@using TrackPay.DataStructures
@model ColaConPrioridad<TrackPay.Models.Pago>

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suscripciones</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
</head>
<body>
    <!-- Encabezado -->
    <header class="header">
        <div class="logo"><img src="/img/logoNombre.png" alt="Trackpay"></div>
        <nav class="nav">
            <a href="#">Pagos Activos</a>
            <a href="/historial">Historial</a>
        </nav>

        <div class="user-profile">
            <img src="/img/fotoperfil.jpg" alt="Usuario" class="profile-pic">
            <div class="profile">
                <span class="username">Usuario por defecto</span>
            </div>
            <i class="fas fa-cog" id="config-btn"></i>
        </div>

        <!-- Modal Configuración -->
        <div id="config-modal" class="modal">
            <div class="modal-inner">
                <div class="modal-header">
                    <h3>Configuración</h3>
                    <button class="modal-close" id="close-config-modal">&times;</button>
                </div>
                <div class="config-info">
                    <div class="config-left">
                        <label>Foto de Usuario:</label>
                        <div class="user-avatar">
                            <img src="/img/fotoperfil.jpg" alt="Foto de Usuario">
                        </div>
                        <div class="import-info">
                            <div class="info-row">
                                <label>Usuario:</label>
                                <div class="info-text">Usuario por defecto</div>
                            </div>
                            <div class="info-row">
                                <label>Nombre Completo:</label>
                                <div class="info-text">Nombre por defecto</div>
                            </div>
                        </div>
                    </div>
                    <div class="config-right">
                        <div class="info-row">
                            <label>Número de Celular:</label>
                            <div class="info-text">+00 000 000 0000</div>
                        </div>
                        <div class="info-row">
                            <label>Correo:</label>
                            <div class="info-text">correo@ejemplo.com</div>
                        </div>
                        <div class="info-row">
                            <label>Nacionalidad:</label>
                            <div class="info-text">Desconocido</div>
                        </div>
                        <div class="info-row">
                            <label>Total de Pagos Activos:</label>
                            <div class="info-text">0</div>
                        </div>
                    </div>
                </div>
                <div class="config-footer">
                    <button class="edit-btn">Editar Información</button>
                    <button class="logout-btn">
                        <a href="/login" class="logout-link">Cerrar Sesión</a>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Contenido Principal -->
    <main>
        <!-- Resumen -->
        <section class="overview">
            <h1>Suscripciones</h1>
            <img src="/img/logo.png" alt="Logo">
            <div class="overview-cards">
                <div class="card">
                    <h3>Valor por mes</h3>
                    <a class="value">$0.00</a>
                </div>
                <div class="card">
                    <h3>Fecha más próxima</h3>
                    <div class="value">No definida</div>
                </div>
                <div class="card">
                    <h3>Filtración</h3>
                    <select id="filter-select" class="filter-select">
                        <option value="todos">Todos</option>
                        <option value="pagos_unicos">Pago único</option>
                        <option value="pagos_recurrentes">Pago recurrente</option>
                    </select>
                </div>
            </div>
        </section>

        <!-- Tabla de Suscripciones -->
        <section class="subscriptions">
            <div class="new-subscription">
                <button class="new-btn" id="add-btn"><i class="fas fa-plus"></i> Nuevo</button>
            </div>

            <div class="custom-table">
                <!-- Encabezados de la tabla -->
                <div class="header">
                    <div>Nombre</div>
                    <div>Fecha de vencimiento</div>
                    <div>Temporalidad</div>
                    <div>Tipo</div>
                    <div>Cantidad</div>
                    <div>Acciones</div>
                </div>

                <!-- Filas dinámicas generadas con Razor -->
                <div id="lista-pagos">
                    @if (Model.EsVacia())
                    {
                        <div class="row">
                            <div colspan="6">No hay pagos activos.</div>
                        </div>
                    }
                    else
                    {
                        while (!Model.EsVacia())
                        {
                            var pago = Model.Dequeue();
                            <div>@pago.Concepto</div>
                            <div> </div>
                        }
                    }
                </div>
            </div>
        </section>
    </main>

    <script src="~/js/sie.js" asp-append-version="true"></script>
</body>
</html>